{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs\\Serilog..log",
                    "rollingInterval": "Day"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineId", "WithThreadId" ],

        "Properties": {
            "Application": "SerilogVSNlog"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "default": "Server=localhost;Port=3306;Database=shift_service_db;user=root;password=@NASR2003;"
    }
}
